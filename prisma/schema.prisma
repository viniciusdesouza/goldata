// This is your Prisma schema file
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  title     String
  summary   String
  content   String
  type      String   // "artigo" ou "noticia"
  date      DateTime @default(now())
}